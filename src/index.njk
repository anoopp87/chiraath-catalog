<style>
  :root{--text:#111;--muted:rgba(0,0,0,.65);--border:#eee;--border2:#ddd;--chip:#f7f7f7}
  *{box-sizing:border-box}
  body{margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;background:#fff;color:var(--text)}
  .wrap{max-width:980px;margin:auto;padding:16px}
  .brand{margin:14px 0}
  .muted{color:var(--muted)}
  .btn{display:block;padding:12px;border:1px solid var(--border2);border-radius:14px;text-align:center;text-decoration:none;color:var(--text);margin-bottom:10px;font-weight:800}
  .chips{display:flex;gap:8px;flex-wrap:wrap;margin:12px 0 6px}
  .chipbtn{appearance:none;background:var(--chip);border:1px solid var(--border);border-radius:999px;padding:9px 12px;font-size:13px;font-weight:750;cursor:pointer}
  .chipbtn.active{background:#111;color:#fff;border-color:#111}

  .search{margin:10px 0 8px}
  .search input{width:100%;padding:12px 14px;border:1px solid var(--border);border-radius:14px;font-size:14px}

  .grid{display:grid;grid-template-columns:repeat(2,1fr);gap:12px}
  @media(min-width:768px){.grid{grid-template-columns:repeat(3,1fr)}}
  @media(min-width:1024px){.grid{grid-template-columns:repeat(4,1fr)}}

  .cardlink{color:inherit;text-decoration:none;display:block}
  .card{border:1px solid var(--border);border-radius:16px;padding:10px;background:#fff}
  .card:hover{border-color:#d7d7d7}

  .imgwrap{position:relative}
  .card img{
    width:100%;
    aspect-ratio:4/5;
    object-fit:cover;          /* crop instead of showing full */
    object-position:50% 18%;   /* focus higher (face/blouse area) */
    border-radius:12px;
    background:#f3f3f3
  }
  .oos{
    position:absolute;
    top:10px;
    left:10px;
    background:#111;
    color:#fff;
    font-size:12px;
    font-weight:900;
    border-radius:999px;
    padding:6px 10px
  }

  .code{font-size:12px;color:var(--muted);margin-top:8px}
  .price{margin-top:6px}
  .old{text-decoration:line-through;color:var(--muted);margin-right:8px}
  h1{margin:8px 0 2px;font-size:22px}

  details.faq{border:1px solid var(--border);border-radius:16px;padding:12px 14px;background:#fff}
  details.faq + details.faq{margin-top:10px}
  details.faq summary{cursor:pointer;font-weight:900;list-style:none}
  details.faq summary::-webkit-details-marker{display:none}
  details.faq summary:after{content:"+";float:right}
  details.faq[open] summary:after{content:"–"}
  .faq .content{margin-top:10px;color:var(--muted);font-size:13px;line-height:1.6}
</style>

<div class="wrap">

  <div class="brand">
    <h1>CHIRAATH</h1>
    <div class="muted">Elegant Sarees & Salwars</div>
  </div>

  <!-- Only ONE CTA on main view -->
  <a class="btn" href="https://wa.me/{{ whatsapp_main }}" target="_blank" rel="noopener">
    WhatsApp Order
  </a>

  <div class="chips">
    <button class="chipbtn active" data-filter="all" type="button">All</button>
    <button class="chipbtn" data-filter="Saree" type="button">Sarees</button>
    <button class="chipbtn" data-filter="Salwar" type="button">Salwars</button>
  </div>

  <div class="search">
    <input id="searchBox" type="search" placeholder="Search by code or name…">
  </div>

  {% macro card(p) %}
    <div class="card">
      <div class="imgwrap">
        <img src="{{ p.data.images[0] }}" alt="{{ p.data.title }}">
        {% if p.data.in_stock == false %}
          <div class="oos">Out of stock</div>
        {% endif %}
      </div>

      <div class="code">{{ p.data.code }}</div>
      <strong>{{ p.data.title }}</strong>

      <div class="price">
        {% if p.data.offer_price %}
          <span class="old">₹{{ p.data.price }}</span><strong>₹{{ p.data.offer_price }}</strong>
        {% else %}
          <strong>₹{{ p.data.price }}</strong>
        {% endif %}
      </div>
    </div>
  {% endmacro %}

  <div class="grid">
    {% set prods = collections.products | reverse %}
    {% for p in prods %}
      {% if not p.data.hidden %}
        <div class="product-item"
             data-category="{{ p.data.category }}"
             data-stock="{% if p.data.in_stock == false %}0{% else %}1{% endif %}">
          <a class="cardlink" href="{{ p.url }}">{{ card(p) }}</a>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <footer style="margin-top:28px">

    <details class="faq">
      <summary>How to Order</summary>
      <div class="content">
        Step 1: Select your favorite piece from our gallery.<br>
        Step 2: Send a screenshot via WhatsApp or Email.<br>
        Step 3: We confirm price and availability.<br>
        Step 4: Your order is shipped within 48 hours of payment.
      </div>
    </details>

    <details class="faq">
      <summary>Return & Exchange Policy</summary>
